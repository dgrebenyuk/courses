<h1>Books</h1>
<table border="1">
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.page_count %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Delete', book_path(book), method: 'DELETE' %></td>
    </tr>
  <% end %>
</table>
<br><br>
<%= link_to "Add New Book", new_book_path %>
<%= render 'search_form' %>
